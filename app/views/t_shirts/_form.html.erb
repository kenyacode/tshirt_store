<%= simple_form_for(@t_shirt, html: {class: "form-signin"}) do |f| %>
  <%= f.error_notification %>

    <%= f.input :name, required: true, label: false, placeholder: "Name", input_html: {class: "form-control"} %>
    <%= f.input :brand, required: true, label: false, placeholder: "Brand", input_html: {class: "form-control"} %>
    <%= f.input :size, required: true, label: false, placeholder: "Size", input_html: {class: "form-control"}, :collection => ['xs','sm','med','lg','xlg','xxl','xxxl'] %>
    <%= f.input :designer, required: true, label: false, placeholder: "Designer", input_html: {class: "form-control"} %>
    <%= f.input :description, required: true, label: false, placeholder: "Description", input_html: {class: "form-control"}, rows: 5 %>
    <%= f.input :price, required: true, label: false, placeholder: "Price", input_html: {class: "form-control"} %>
    <div class="checkbox text-center">
    <p>Availability</p>
    <%= f.input :availability, required: true, label: false %>
    </div>
    <%= f.button :submit, class: "btn btn-primary btn-block" %>
<% end %>
